<?php
require_once 'connection.php';
$statementu="SELECT * FROM `user_table` WHERE `user_name` LIKE 'Okay'";
if ($result=mysqli_query($connection,$statementu)) {
    while($row=mysqli_fetch_assoc($result))
    {
        echo "The person name is" . $row['id'] . "<br>";
        echo "The person name is" . $row['user_name'] . "<br>";
        echo "The person name is" . $row['user_password'] . "<br>";
    }
} else {
    echo "Error: " . $statementu . "<br>" . $connection->error;
}


?>