<?php
require_once 'connection.php';
$x1 = $_GET['Tip'];
$x2 = $_GET['Şehir'];
$x3 = $_GET['Bölge'];
$statementu="SELECT * FROM `emlaklist` WHERE `Type` LIKE '$x1' AND `Location` $x2 'Yukarı Bob' AND `Area` LIKE '$x3'";
if ($result=mysqli_query($connection,$statementu)) {
    while($row=mysqli_fetch_assoc($result))
    {
        
        echo "The person name is" . $row['Type'] . "<br>";
        echo "The person name is" . $row['Location'] . "<br>";
        echo "The person name is" . $row['Area'] . "<br>";
    }
} else {
    echo "Error: " . $statementu . "<br>" . $connection->error;
}


?>